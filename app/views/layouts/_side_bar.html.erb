<section class="sidebar">
  <div class="panel d-flex">
    <div class="" id="sidebar">
      <section>
        <div class="mt-3">
          <div class="profile-cont mb-5 d-flex">
            <div class="profile">
              <%= image_tag(current_user.pic) if current_user.pic.attached? %>
            </div>
              <%= link_to current_user.name, user_path(current_user), class: 'text-dark' %>
            <div data-controller="profile" data-action="click->rooms#edit_user" class="pointer" role='button'><i class="fa fa-circle-plus"></i></div>
          </div>
          <ul class="list">
            <li class="home-btn text-dark">
              <i class="fa-solid fa-house"></i>
              <%= link_to "Home", root_path, turbo:'false', class: "text-dark home" %>
            </li>
            <li class="home-btn text-dark">
              <i class="fa-solid fa-list-check"></i><%= link_to "Progress", root_path, turbo:'false', class: "text-dark home" %>
            </li>
            <li class="home-btn text-dark">
              <i class="fa-solid fa-clipboard-user"></i><%= link_to "Attendance", root_path, turbo:'false', class: "text-dark home" %>
            </li>
            <li class="home-btn text-dark">
              <i class="fa-solid fa-chalkboard-user"></i><%= link_to "Tutorials", root_path, turbo:'false', class: "text-dark home" %>
            </li>

            <li class="home-btn text-dark">
              <% if current_user %>
              <%= link_to 'Sign out', destroy_user_session_path, data: { turbo_method: :delete }, class: "text-dark" %>
              <% else %>
                <%= link_to 'Sign in', user_session_path %>
              <% end %>
            </li>
          <ul>
        </div>
      </section>
    </div>
  </div>
</section>