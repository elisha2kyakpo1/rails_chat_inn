<section class="sidebar">
  <div class="panel d-flex">
    <div class="" id="sidebar">
      <section>
        <div class="mt-3">
              <div class="profile-cont d-flex">
                <div class="profile">
                  <%= image_tag(current_user.pic) if current_user.pic.attached? %>
                </div>
                <h5 class="text-dark"><%= link_to current_user.name, user_path(current_user) %></h5>
              </div>
          <div class="">
            <span><i class="bi bi-arrow-right-circle"></i></span>
            <h4><%= link_to "Dashboard", root_path, turbo:'false', class: "text-dark" %></h4>
          </div>

          <div class="">
            <span><i class="fa-solid fa-user-secret"></i></span>
            <h4><%= link_to "Start Chatting", rooms_path, turbo:'false', class: "text-dark" %></h4>
          </div>
          <div>
            <% if current_user %>
              <%= link_to 'Sign out', destroy_user_session_path, data: { turbo_method: :delete }, class: "text-dark" %>
            <% else %>
              <%= link_to 'Sign in', user_session_path %>
            <% end %>
          </div>
        </div>
      </section>
    </div>
  </div>
</section>