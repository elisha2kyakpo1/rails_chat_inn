<div id="chatroom_container" class="row bg-dark text-light p-3">
    <div id="side_panel" class="col-md-4 col-sm-12">
    <h5><%= current_user %></h5>
    <h4>Users</h4>
        <%= turbo_stream_from "users" %>
        <div id="users">
            <%=render @users %>
        </div>
    <h4>Rooms </h4>
        <%= turbo_stream_from "rooms" %>
        <div id="rooms">
            <%= render @rooms%>
        </div>
        <%= render 'layouts/new_room' %>
    </div>
    <div id="room_container" class="col-md-8 col-sm-12 bg-dark text-light">
    <%if @single_room %>
        <div id="single_room">
            <h4 class="text-center"><%= @user&.email || @single_room.name %></h4><%= turbo_stream_from @single_room%>
            <div id="messages"><%= render @messages %></div>
            <div id="send-message">
                <%= render 'layouts/new_message' %>
            </div>
             <% end %>
         </div>
    </div>

</div>
